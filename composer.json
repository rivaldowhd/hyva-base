{
    "name": "rivaldowhd/hyva_base",
    "description": "Hyva base theme based on Hyva default",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.2",
        "magento/framework": ">=102.0.*",
        "hyva-themes/magento2-reset-theme":  ">=1.1.5",
        "hyva-themes/magento2-theme-module": ">=1.3.5",
        "hyva-themes/magento2-email-module": "*",
        "hyva-themes/magento2-graphql-tokens": "*",
        "hyva-themes/magento2-graphql-view-model": ">=1.0.1",
        "magento/module-catalog-rule-graph-ql":"*",
        "magento/module-customer-graph-ql": "*",
        "magento/module-directory-graph-ql": "*",
        "magento/module-graph-ql": "*",
        "magento/module-quote-graph-ql":"*"
    },
    "suggest": {
        "hyva-themes/magento2-review-graphql": "*"
    },
    "type": "magento2-theme",
    "license": [
        "OSL-3.0",
        "AFL-3.0"
    ],
    "autoload": {
        "files": [
            "registration.php"
        ]
    },
    "repositories": {
        "magento": {
            "type": "composer",
            "url": "https://repo.magento.com/"
        },
        "hyva-themes-snaptutu": {
            "type": "composer",
            "url": "https://hyva-themes.repo.packagist.com/snaptutu-com/"
        }
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "dev-master",
        "magento/magento-coding-standard": "dev-master",
        "phpro/grumphp": "dev-master"
    }
}
